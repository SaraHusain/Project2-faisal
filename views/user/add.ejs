<div class="userAddLogo">
<img class="logos" src="/uploads/Screenshot (4).png">
</div>

<div class="userAddPage">
    <div class="userAddPageCon">
        <h1>Add User</h1>
        <form method="POST" action="/user/add">
            <div class="row">
                <div class="col">
                    <label>User Name : </label>
                    <input type="text" class="form-control" name="name" placeholder="Name" aria-label="Name" required>
                </div>
                <div class="col">
                    <label>Email : </label>
                    <input type="text" class="form-control" name="emailAddress" placeholder="Email Address" aria-label="Name">
                </div>
            </div>

            <div class="row">
                <div class="col-5">
                    <label>Phone Number : </label>
                    <input type="text" name="phoneNum" class="form-control" placeholder="Your Phone Number">
                </div>
            </div>

            <br>

            <button  type="submit" class="btn btn-primary">Create User</button>
        </form>
    </div>
</div>