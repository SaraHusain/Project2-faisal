<h1>Edit Booking</h1>
<form method="POST" action="/booking/update">
    <div>
      <label>Check In Date</label>
      <input type="date" name="checkIn" class="form-control" value="<%= bookings.checkIn %>">
    </div>
    <div>
        <label>Check Out Date</label>
        <input type="date" name="checkOut" class="form-control" value="<%= bookings.checkOut %>">
      </div>
    <div>
      <label>Room Type</label>
      <select name="RoomType" class="form-control">
          <%roomTypes.forEach(function(RoomType){%>
              <option value="<%= RoomType._id %>"><%= RoomType.type %></option>        
          <% }) %>
      </select>
  </div>
  <input type="hidden" name="id" value="<%= bookings._id %>">
    <button type="submit"  class="btn btn-secondary btn-lg">Edit Booking</button>
  </form>