<h1>Add Booking</h1>
<form method="POST" action="/booking/add">
    <div>
      <label>Room Type</label>
      <select name="RoomType" class="form-control">
          <%roomTypes.forEach(function(RoomType){%>
              <option value="<%= RoomType._id %>"><%= RoomType.type %></option>        
          <% }) %>
      </select>
  </div>
  <input type="hidden" name="checkIn" value="<%=requestedCheckin%>">
  <input type="hidden" name="checkOut" value="<%=requestedCheckOut%>">
    <button type="submit" class="btn btn-secondary btn-lg">Add New Booking</button>
  </form>